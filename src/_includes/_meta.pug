mixin meta(path)
  meta(charset="UTF-8")
  meta(http-equiv="X-UA-Compatible" content="IE=edge")
  meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0")
  meta(name="format-detection" content="telephone=no,email=no,address=no")
  meta(name="description" content=pageDescription)
  meta(name="keywords" content=pageKeywords)

  //- OGP
  meta(property="og:title" content=pageOgpTitle)
  meta(property="og:type" content=pageOgpType)
  meta(property="og:image" content="http://www.ministop.co.jp/corporate/recruit/assets/img/ogp.png")
  meta(property="og:description" content=pageDescription)
  meta(property="og:url" content="http://www.ministop.co.jp/corporate/recruit/" + pageUrl)
  meta(property="og:site_name" content="ミニストップ2018年度新卒採用")
  meta(property="og:locale" content="ja")
  //- meta(property="og:image" content=pageOgpImage)個別に対応せず、全部同じでOKなので

  //- OGP Facebook insights
  //- meta(property="fb:admins" content="")情報を貰えば設定できる
  //- meta(property="fb:app_id" content="")情報を貰えば設定できる
  //- /OGP Facebook insights

  //- OGP Twitter Cards
  meta(name="twitter:card" content="summary")
  //- meta(name="twitter:site" content="@")これは任意
  //- /OGP Twitter Cards

  //- /OGP

  block title
    title #{pageTitle}
    link(rel="shortcut icon", href=path + "assets/img/favicon.ico")

  block css
    //- link(href='//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css', rel='stylesheet')
    link(rel="stylesheet" href=path + "assets/css/font-awesome.css")
    link(rel="stylesheet" href=path + "assets/css/style.css")

  block js
    script(src=path + "assets/js/jquery-3.2.1.min.js")
    script(src=path + "assets/js/sp_header_nav.js")
    //- script(src=path + "assets/js/slideshow.js")
    script(src=path + "assets/js/slideshow2.js")
    script(src=path + "assets/js/smooth-scroll.js")
    script(src=path + "assets/js/pjax.js")
    script(src=path + "assets/js/scrollup_only_top.js")
    script(src=path + "assets/js/analytics.js")
    //- script(src=path + "assets/js/common.js")
